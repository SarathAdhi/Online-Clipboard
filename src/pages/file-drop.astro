---
import PageLayout from "@layouts/PageLayout.astro";
import FileDropForm from "@modules/Filedrop/FileDropForm";
import IntroSectionFileDrop from "@modules/Filedrop/IntroSectionFileDrop.astro";
import { uuid as funcUuid } from "@utils/uuid";

const { url } = Astro;

const id = url.searchParams.get("id");

const uuid = id || funcUuid();

if (!id) {
  return Astro.redirect(`/file-drop?id=${uuid}`);
}
---

<PageLayout title="File Drop">
  <FileDropForm client:load uuid={uuid} />

  <IntroSectionFileDrop />
</PageLayout>
