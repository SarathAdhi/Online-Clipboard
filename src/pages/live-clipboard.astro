---
import PageLayout from "@layouts/PageLayout.astro";
import RealtimeCb from "@modules/Realtime";
import IntroSectionRT from "@modules/Realtime/IntroSectionRT.astro";

import { uuid as funcUuid } from "@utils/uuid";

const { url } = Astro;

const id = url.searchParams.get("id");

const uuid = id || funcUuid();

if (!id) {
  return Astro.redirect(`/live-clipboard?id=${uuid}`);
}
---

<PageLayout
  title="Live ClipBoard - Sync Automatically in Realtime"
  description="Clipboard to share text between computers very easy. This tool sync clipboard in realtime."
>
  <RealtimeCb client:load uuid={uuid} />

  <IntroSectionRT />
</PageLayout>
