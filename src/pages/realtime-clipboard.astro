---
import PageLayout from "@layouts/PageLayout.astro";
import RealtimeCb from "@modules/RealtimeCb";
import { uuid as funcUuid } from "@utils/uuid";

const { url } = Astro;

const id = url.searchParams.get("id");

const uuid = id || funcUuid();

if (!id) {
  return Astro.redirect(`/realtime-clipboard?id=${uuid}`);
}
---

<PageLayout title="Realtime ClipBoard | 0cb">
  <RealtimeCb client:load uuid={uuid} />
</PageLayout>
